# DSPy Configuration
OPENAI_API_KEY=your_openai_api_key_here
DSPY_MODEL=gpt-4
DSPY_MAX_TOKENS=1000
DSPY_TEMPERATURE=0.7

# Blockchain Configuration
WEB3_PROVIDER_URI=https://sepolia.infura.io/v3/your_infura_key
PRIVATE_KEY=your_private_key_here
CHRONICLER_REGISTRY_ADDRESS=0x...
CHRONICLER_AUDIT_LOG_ADDRESS=0x...
CHRONICLER_ACCESS_CONTROL_ADDRESS=0x...

# Service Configuration
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=INFO
ENVIRONMENT=development

# Database (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/chronicler

# IPFS Configuration
IPFS_URL=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=your_ipfs_project_id
IPFS_PROJECT_SECRET=your_ipfs_project_secret

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
METRICS_ENABLED=true

# Agent Configuration
AGENT_NAME=chronicler-agent
AGENT_ID=0x...
DEFAULT_TOOL_ID=0x...